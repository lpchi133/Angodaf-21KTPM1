<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AngodaFake"
        tools:targetApi="31">
        <activity
            android:name=".PastCancelPurchaseDetail"
            android:exported="false" />
        <activity
            android:name=".ActivePurchaseDetail"
            android:exported="false" />
        <activity
            android:name=".CancelPurchase"
            android:exported="false" />
        <activity
            android:name=".PastCancelPurchaseAdapter"
            android:exported="false" />
        <activity
            android:name=".ActivePurchaseAdapter"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>